{
  "title": "Conditional caps lock + Awesome WM mappings",
  "author": "Vonng(fengruohang@outlook.com)",
  "homepage": "https://github.com/Vonng/Capslock",
  "hostpage": "https://pqrs.org/osx/karabiner/complex_modifications/",
  "manual": "https://github.com/Vonng/Capslock/tree/master/mac",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/Vonng/Capslock/master/mac/capslock.json",
  "rules": [
    {
      "description": "Awesome WM mappings using Left Command",
      "manipulators": [
        {
          "description": "CMD + [ => volume decrement",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "description": "CMD + ] => volume increment",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ],
          "type": "basic"
        },
        {
          "description": "CMD + j => CMD + TAB",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "description": "CMD + k => CMD + TAB",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "left_command",
                "left_shift"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Shift + CMD +c -> close window",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "description": "CMD + - -> Brightness Reduce",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "description": "CMD + = -> Brightness Increase",
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_increment"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Kitty'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "left_option",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "left_option",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "fastforward"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f10",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "mute"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Capslock acts as command or ctrl depending on application",
      "manipulators": [
        {
          "from": {
            "description": "Caps lock is Command in all app except listed",
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "left_command",
                "left_control",
                "left_shift",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "conditions": [
              {
                  "type": "frontmost_application_unless",
                  "bundle_identifiers": [
                      "io.alacritty",
                      "com.googlecode.iterm2",
                      "net.kovidgoyal.kitty",
                      "org.vim.MacVim"
                  ],
                  "file_paths": [
                      "/Applications/Emacs.app/Contents/MacOS/Emacs",
                      "/Applications/kitty.app/Contents/MacOS/kitty",
                      "/Applications/Alacritty.app/Contents/MacOS/alacritty",
                      "/Applications/iTerm.app/Contents/MacOS/iTerm2",
                      "/Applications/MacVim.app/Contents/MacOS/MacVim"
                  ]
              }
          ],
          "type": "basic"
        },
        {
          "from": {
            "description": "Caps lock is Ctrl in all apps listed",
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "left_command",
                "left_control",
                "left_shift",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
              {
                  "type": "frontmost_application_if",
                  "bundle_identifiers": [
                      "io.alacritty",
                      "com.googlecode.iterm2",
                      "net.kovidgoyal.kitty",
                      "org.vim.MacVim"
                  ],
                  "file_paths": [
                      "/Applications/Emacs.app/Contents/MacOS/Emacs",
                      "/Applications/kitty.app/Contents/MacOS/kitty",
                      "/Applications/Alacritty.app/Contents/MacOS/alacritty",
                      "/Applications/iTerm.app/Contents/MacOS/iTerm2",
                      "/Applications/MacVim.app/Contents/MacOS/MacVim"
                  ]
              }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}