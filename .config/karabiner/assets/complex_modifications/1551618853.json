  "rules": [
    {
      "description": "Left Command to Hyper/Left Command",
      "manipulators": [
        {
          "description": "Left Command to Hyper if a modifier is pressed else it Left Command",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_command"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
