[colors]
background = #aa111111
background-alt = #aa111111
foreground = #d4d6dc
foreground-occupied = #626784
foreground-unfocused = #fa626784
alert = ${xrdb:color1}
red = #e27878


[settings]
format-foreground =
format-background = ${colors.background-alt}
format-padding = 0
format-overline =
format-spacing =
format-margin = 0
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/example]
; hide polybar when window goes fullscreen
wm-restack = bspwm
override-redirect = false
enable-ipc = true
fixed-center = false
bottom = false
separator = "%{F#63ff93} |  %{F-}"

width = 100%
height = 27
offset-x = 0
offset-y = 0
radius = 0.0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 1
font-0 = Font Awesome 5 Free Solid:style=Solid;size=16;1
font-1 = Ubuntu:size=14;1
font-2 = FiraCode Nerd Font;size=26;1
modules-left = mod favorites bspwm xwindow
; modules-center = mpd
modules-right = xkeyboard memory cpu wlan battery temperature date volume

tray-position = right
tray-padding = 0
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

scroll-up = bspwm-desknext

scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = default

click-right = ~/bin/app-menu


[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

label-song =  %artist% - %title%
label-offline =  mpd is offline
label-time = %elapsed% / %total%

format-offline = <label-offline>
format-online = <label-song>  <toggle>   <bar-progress>   <label-time>
format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = ${self.format-online}

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

icon-play = 
icon-pause = 


[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 80

[module/xkeyboard]
type = internal/xkeyboard
format = <label-layout> <label-indicator>
indicator-icon-default = 
indicator-icon-0 = caps lock;;[CL]
indicator-icon-1 = scroll lock;;[SL]
indicator-icon-2 = num lock;;[NL]
label-indicator-on = %icon%
label-indicator-off = %icon%
label-layout = %layout%

[module/filesystem]
type = internal/fs
interval = 2
mount-0 = /
mount-1 = /home
format-mounted = "<label-mounted>"
format-unmounted = <label-unmounted>
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-unfocused}

[module/favorites]
type = custom/text
;content-underline = ${colors.favoritesAccent}
;using action formatting tag to define clickable areas
content = "%{A1:kitty&:}%{A}  %{A1:thunar&:}%{A}  %{A1:firefox&:}%{A}"


[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.foreground-unfocused}
label-occupied-underline = ${colors.foreground-occupied}
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-unfocused}
label-empty-padding = 1

format-underline =
format-background =
format-padding =

reverse-scroll = false

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = 
format = <label>
format-prefix-foreground = #FFFF00
format-foreground = #FFFF00
format-padding = 1
label = %percentage:02%%

[module/memory]
type = internal/memory
interval = 2
# icon used is Font Awsome (f538) https://fontawesome.com/icons/memory?style=solid
format-prefix = " "
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0

format-connected-prefix = " "
format-connected = <label-connected>
format-connected-underline = #9f78e1
label-connected = %downspeed:08% ^%upspeed:08:9:...%
format-connected-foreground = #5882FA

; format-disconnected =
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-unfocused}

[module/date]
type = internal/date
interval = 5
date = " %a, %b %d,"
date-alt = " %Y-%m-%d"
time = " %H:%M"
time-alt = %H:%M
format-underline = #0a6cf5
label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-full = <label-full>
; icon used is Font Awsome Plug
label-full = ""

format-charging = <label-charging>
label-charging = "char"
format-charging-underline = #ffb52a

format-discharging = <label-discharging>
label-discharging = "dis" %percentage%%
format-discharging-underline = ${self.format-charging-underline}



[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-foreground = #aaaa00
format-underline = #f50a4d
format-warn = <label-warn>
format-warn-foreground = #aa9999
format-warn-underline = ${self.format-underline}

label = " %temperature-c:05%"
label-warn = %temperature-c:05%

[module/volume]
type = custom/script
format-prefix = " "
format = "<label> "
label = %output:0:15:...%
exec = ~/bin/vol-control getVol
click-left = ~/bin/vol-control toggle
scroll-up = ~/bin/vol-control louder && ~/bin/vol-control notify
scroll-down = ~/bin/vol-control softer && ~/bin/vol-control notify

[module/mod]
type = internal/bspwm
format = <label-mode>
format-background = ${color.YELLOW}
format-foreground = ${color.BACKGROUND}
format-padding = 1
label-monocle = "Monocle"
label-tiled = "Tiled"
label-floating = ", Float"
label-pseudotiled = ", Pseudo"
label-fullscreen = ", Full"
label-locked = " | Locked"
label-sticky = " | Sticky"
label-private = " | Private"
