#!/bin/bash
chosen=$(echo -e "urxvt\nfirefox\n\
kitty\n\
thunar\n\
gimp\nranger\nscreenOff\nscreenOn" | rofi -p "mu" -dmenu)

case $chosen in
  urxvt)
    urxvtc &
    ;;
  firefox)
    firefox &
    ;;
  kitty)
    kitty &
    ;;
  thunar)
    thunar &
    ;;
  ranger)
    urxvtc -fn 'xft:UbuntuMono:Regular:size=25' -e ranger
    ;;
  gimp)
    gimp &
    ;;
  screenOff)
    xset dpms 0 0 10
    ;;
  screenOn)
    xset dpms 0 0 7200
    ;;
esac
