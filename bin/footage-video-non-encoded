#!/bin/bash

# Images
echo "\.JPG
\.jpg
\.PNG
\.png
\.CR3
\.HEIC" > /tmp/video-encoded-patterns.txt

# Enoded video names
echo "encoded" >> /tmp/video-encoded-patterns.txt

# Others
echo "\.placeholder
\.db
\.XML
\.mp3" >> /tmp/video-encoded-patterns.txt
find ~/data/footage -type f | grep -v -f /tmp/video-encoded-patterns.txt
