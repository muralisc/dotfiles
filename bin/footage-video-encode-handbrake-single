#!/bin/bash

# Wrapper to Handbrake cli to make it compatible with cp and mv


echo "~/src/dotfiles/bin/footage-video-encode-handbrake-single /home/murali/data/footage/2022/2022_06_25/null-NoModelName/VID_20220625_201920.mp4 /home/murali/shared_folders/raspberry-pi/photoframe/videos/VID_20220625_201920.m4v"


INPUT_FILE_PATH=$1
OUPUT_FILE_PATH=$2
# preset="HQ 2160p60 4K HEVC Surround"
preset="${3:-HQ 1080p30 Surround}"
# preset="Fast 1080p30"
# preset="Very Fast 1080p30"

echo "Executing ========= " HandBrakeCLI -Z "$preset" -i "$INPUT_FILE_PATH" -o "$OUPUT_FILE_PATH"
HandBrakeCLI -Z "$preset" -i "$INPUT_FILE_PATH" -o "$OUPUT_FILE_PATH"
